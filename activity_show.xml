<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffa0505">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:background="#ff443636"
        android:padding="10dp"
        android:layout_margin="10dp">
        <TextView
            android:text="Show Page"
            android:layout_width="match_parent"
            android:layout_height="78.0dp"
            android:id="@+id/address"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:background="#ff000000"
            android:gravity="center"
            android:textSize="30dp" />
        
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/linearLayout5"
                android:gravity="center"
                android:padding="5dp"
                android:background="#ff4e5c0f"
                android:layout_margin="10dp">
                <Button
                    android:text="Show All"
                    android:layout_width="110dp"
                    android:layout_height="68.5dp"
                    android:id="@+id/showall"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_margin="5dp" />
                <Button
                    android:text="@string/Back"
                    android:layout_width="70.0dp"
                    android:layout_height="68.5dp"
                    android:id="@+id/back"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_margin="5dp" />
            <Button
                    android:text="@string/ShowUser"
                    android:layout_width="110.0dp"
                    android:layout_height="68.5dp"
                    android:id="@+id/showuser"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_margin="5dp" />
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout2"
            android:background="#ff3a3e28"
            android:gravity="center">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/username"
                android:background="#fffaf8f8"
                android:layout_margin="10dp"
                android:hint="@string/Username"
                android:gravity="center"
                android:textSize="25dp"
                android:textColorHint="#ff000000"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/show"
                android:background="#fffaf8f8"
                android:layout_margin="10dp"
                android:text="@string/Show"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#ff000000"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
